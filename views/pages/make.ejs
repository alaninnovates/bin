			<footer><%- include('../partials/footer'); %></footer>
		</div>
		<script>
			const editor = ace.edit('editor');
			editor.setTheme('ace/theme/monokai');
			editor.getSession().setMode('ace/mode/text');

			// Load search query language
			const l = new URL(location).searchParams.get('lang');
			const op = Array.from(document.getElementById('mode').options).filter(o => o.value === `ace/mode/${l}`);
			op ? op[0].selected = true : undefined;
			editor.getSession().setMode(op ? op[0].value : 'ace/mode/text');

			function language(lang) {
				editor.getSession().setMode(lang);
			}
			async function add() {
				const lang = document.getElementById('mode').value.split('/')[document.getElementById('mode').value.split('/').length-1];
				const txt = editor.getValue();
				if (!txt) return;
				const res = await fetch('/new', {
					method: 'POST',
					headers: {
						'content-type': 'application/json'
					},
					body: JSON.stringify({ text: txt, lang })
				}).then(r => r.json());
				window.location.href = `/${res.id}`;
			}
		</script>
	</body>
